generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Filme {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  linguagem String
  titulo String
  genero String[]
  descricao String
  popularidade Int
  type String @default("filme")
  poster String
  data  String
  video String
  trailer String
  voto_medio Float
  createAt DateTime @default(now())
  updateAt DateTime @default(now())

  @@index([titulo])
  @@map("filme")
}
